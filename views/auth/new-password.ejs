<%- include('../partials/header', { title: 'Nueva Contraseña' }) %>
<div class="auth-container">
    <div class="auth-card fade-in">
        <div class="auth-header">
            <div class="logo">
                <div class="logo-icon">FM</div>
            </div>
            <h2 class="auth-title">Nueva Contraseña</h2>
            <p class="auth-subtitle">Establece tu nueva contraseña</p>
        </div>
        
        <% if (error) { %>
            <div class="alert alert-error" id="new-password-error">
                <span>⚠️</span>
                <%= error %>
            </div>
        <% } %>
        
        <form action="/reset-password" method="POST" id="new-password-form">
            <input type="hidden" name="token" value="<%= token %>">
            
            <div class="form-group">
                <label for="password" class="form-label">Nueva contraseña</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-control" 
                    placeholder="••••••••"
                    required
                >
            </div>
            
            <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirmar nueva contraseña</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    class="form-control" 
                    placeholder="••••••••"
                    required
                >
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;" id="new-password-submit">
                Guardar Contraseña
            </button>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>